<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tab_title">
        <item name="android:id">@id/tab_title</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/android_title_bg</item>
        <item name="android:padding">0dip</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tab_content">
        <item name="android:id">@id/tab_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_above">@+id/tab_indictor</item>
        <item name="android:layout_below">@+id/tab_title</item>
    </style>

    <style name="tab_indictor">
        <item name="android:id">@id/tab_indictor</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/main_navigation_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tab_message">
        <item name="android:id">@id/tab_message</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/tab_content</item>
        <item name="android:background">@drawable/android_my_message_unread</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

	<style name="main_tab_bottom">
		<item name="android:text">tab</item>
		<item name="android:textSize">@dimen/bottom_tab_font_size</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/tab_indicator</item>
		<item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
		<item name="android:paddingBottom">@dimen/bottom_tab_padding_up</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:button">@null</item>
		<item name="android:singleLine">true</item>
		<item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
		<item name="android:layout_weight">1.0</item>
	</style>

</resources>