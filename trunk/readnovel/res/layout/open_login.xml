<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#e9e9e9" 
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/open_login_layout"
        android:textSize="15sp"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:text="使用以下账号快速登陆，无需注册" />

    <LinearLayout
        android:id="@id/open_login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:gravity="left" >

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
        	android:layout_marginBottom="10dip"
        	android:layout_marginRight="7.5dip"
            android:src="@drawable/qq_login_big" 
            android:clickable="true"
            android:onClick="loginForQQ"/>

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="10dip"
        	android:layout_marginBottom="10dip"
            android:layout_marginLeft="7.5dip"
            android:src="@drawable/sina_login_big" 
            android:clickable="true"
            android:onClick="loginForSina"
            android:visibility="visible"/>
    </LinearLayout>

</RelativeLayout>