<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_lv" >

    <LinearLayout
        android:id="@+id/imgContainer"
        android:layout_width="60dip"
        android:layout_height="71dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/book_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/theme_list_img"
            android:layout_width="44dip"
            android:layout_height="55dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip" >
        </ImageView>
    </LinearLayout>

    <!-- 第一行 -->

    <TextView
        android:id="@+id/theme_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/imgContainer"
        android:singleLine="true"
        android:text="《胭脂色huhu"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />
    <!-- 第一行结束 -->


    <!-- 第二行 -->

    <TextView
        android:id="@+id/theme_list_clicknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/theme_list_title"
        android:layout_marginLeft="7dip"
        android:layout_toRightOf="@id/imgContainer"
        android:text="3457899"
        android:textColor="#FF3300"
        android:textSize="15sp" >
    </TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/theme_list_clicknum"
        android:layout_marginLeft="2dip"
        android:layout_toRightOf="@+id/theme_list_clicknum"
        android:text="个点击"
        android:textColor="#000000"
        android:textSize="15sp" >
    </TextView>
    <!-- 第二行结束 -->


    <!-- 第三行 -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/theme_list_clicknum"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@id/imgContainer"
        android:text="类型："
        android:textColor="#7C7C7C"
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/theme_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="穿越时空"
        android:textColor="#7C7C7C"
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theme_list_clicknum"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/theme_list_type"
        android:text=" | "
        android:textColor="#7C7C7C"
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theme_list_clicknum"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/textView44"
        android:text="作者："
        android:textColor="#7C7C7C"
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/theme_list_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:text="雨夜雨夜雨"
        android:textColor="#7C7C7C"
        android:textSize="12sp" >
    </TextView>
    <!-- 第三行结束 -->

    <ImageView
        android:id="@+id/theme_list_tag"
        android:layout_width="26dip"
        android:layout_height="24.67dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dip"
        android:layout_marginTop="0.8dip"
        android:background="@drawable/tag" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="12dip"
        android:layout_below="@+id/textView2" >
    </LinearLayout>

    <TextView
        android:id="@+id/discount_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/theme_list_title"
        android:layout_alignBottom="@+id/theme_list_title"
        android:layout_toRightOf="@+id/theme_list_title"
        android:text="(7.5折  )"
        android:visibility="gone"
        android:textColor="#FF0000" />

</RelativeLayout>