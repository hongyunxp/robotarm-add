<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="86dip"
    android:background="@drawable/select_lv">

    <LinearLayout
        android:id="@+id/imgContainer"
        android:layout_height="71dip"
        android:layout_width="60dip"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="9dip"
        android:background="@drawable/book_bg">

        <ImageView
            android:layout_height="55dip"
            android:layout_width="45dip"
            android:id="@+id/theme_list_img"
            android:layout_marginLeft="4.7dip"
            android:layout_marginTop="5dip">
        </ImageView>
    </LinearLayout>

    <!-- 第一行 -->

    <TextView
        android:id="@+id/theme_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/imgContainer"
        android:layout_marginLeft="3dip"
        android:text="《胭脂色》"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <!-- 第一行结束 -->


    <!-- 第二行 -->

    <TextView
        android:id="@+id/theme_list_clicknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/theme_list_title"
        android:layout_toRightOf="@id/imgContainer"
        android:layout_marginLeft="7dip"
        android:text="3457899"
        android:textColor="#FF3300"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:layout_alignBottom="@id/theme_list_clicknum"
        android:layout_toRightOf="@id/theme_list_clicknum"
        android:layout_width="wrap_content"
        android:text="个点击"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000">
    </TextView>
    <!-- 第二行结束 -->


    <!-- 第三行 -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/theme_list_clicknum"
       android:layout_toRightOf="@id/imgContainer"
        android:text="类型："
        android:textSize="12sp"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="7dip"
        android:textColor="#7C7C7C"
        >
    </TextView>

    <TextView
        android:id="@+id/theme_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="穿越时空"
        android:textSize="12sp"
        android:textColor="#7C7C7C"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:text=" | "
        android:id="@+id/textView44"
        android:textSize="12sp"
        android:textColor="#7C7C7C"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:layout_below="@+id/theme_list_clicknum"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/theme_list_type">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:text="作者："
        android:id="@+id/textView4"
        android:textSize="12sp"
        android:textColor="#7C7C7C"
        android:layout_marginLeft="5dip"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:layout_below="@+id/theme_list_clicknum"
        android:layout_toRightOf="@+id/textView44">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:text="雨夜雨夜雨"
        android:id="@+id/theme_list_author"
        android:textSize="12sp"
        android:singleLine="true"
        android:textColor="#7C7C7C"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4">
    </TextView>

    <!-- 第三行结 -->

    <ImageView
        android:background="@drawable/tag"
        android:layout_height="25dip"
        android:layout_width="26dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dip"
        android:id="@+id/theme_list_tag"/>

    <LinearLayout
        android:layout_height="10dip"
        android:layout_width="fill_parent"
        android:layout_below="@+id/textView2"
        android:visibility="invisible">
    </LinearLayout>

</RelativeLayout>