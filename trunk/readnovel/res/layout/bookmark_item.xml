<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/mark_item_rl"
	android:background="@drawable/mkitem_bg"
	android:paddingLeft="8dip"
	android:paddingRight="8dip">

	<TextView
		android:id="@+id/mark_item_title"
		android:singleLine="true"
		android:layout_width="wrap_content"
		android:layout_marginTop="8dip"
		android:textSize="13sp"
		android:layout_height="wrap_content"
		android:text="第5章  冷雪浇花端"
		android:textColor="#000000" />

	<TextView
		android:id="@+id/mark_item_jj"
		android:layout_marginTop="4dip"
		android:textSize="12sp"
		android:layout_width="wrap_content"
		android:layout_below="@id/mark_item_title"
		android:singleLine="true"
		android:layout_toLeftOf="@+id/bt_delete"
		android:layout_height="wrap_content"
		android:text="他一心经营着慕容家的事业，操心着慕容雪的心事……"
		android:textColor="#777777" />

	<TextView
		android:id="@+id/mark_item_time"
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content"
		android:layout_below="@id/mark_item_jj"
		android:layout_height="wrap_content"
		android:text="2012-1-25 09:50"
		android:textSize="10sp"
		android:textColor="#727171" />
	<TextView
		android:id="@+id/mark_item_p"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_below="@id/mark_item_jj"
		android:layout_height="wrap_content"
		android:text="[1.1%]"
		android:textColor="#727171"
		android:textSize="10sp" />
	<Button
		android:id="@+id/bt_delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="删除"
		android:layout_above="@+id/mark_item_p"
		android:visibility="gone"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"></Button>

</RelativeLayout>
