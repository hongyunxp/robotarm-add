<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#e9e9e9">

    <include
        layout="@layout/include_top_bar"
        android:id="@+id/top_bar"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFCC67"
        android:paddingBottom="1dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:background="#FFFFE1">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="55dip"
                android:background="@drawable/consume_write_btn"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:clickable="true"
                android:onClick="register">

                <ImageView
                    android:id="@+id/msg_reg_icon"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="15dip"
                    android:src="@drawable/msg_reg_icon"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingTop="8dip"
                    android:textSize="16dip"
                    android:textColor="@drawable/btn_color"
                    android:text="短信快速注册 "
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/msg_reg_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingBottom="9dip"
                    android:textSize="10dip"
                    android:textColor="#888888"
                    android:text="发短信，注册小说阅读网"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/msg_reg_icon"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="15.3dip"
                android:layout_height="10.7dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dip"
                android:layout_centerVertical="true"
                android:src="@drawable/jiantou2"/>
        </RelativeLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_blank"
                android:singleLine="true"
                android:layout_margin="10dip"
                android:paddingLeft="6dip"
                android:hint="请输入您的用户名"
                android:textColorHint="#B0B0B0"
                android:numeric="integer"
                android:phoneNumber="true"
                android:digits="@string/limit_input"
                android:id="@+id/registe_username"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="13dip"
                android:layout_margin="4dip"
                android:src="@drawable/xing"
                android:visibility="gone"
                android:id="@+id/regist_username_icon"/>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="25dip"
            android:hint="只能用手机号、QQ号"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="10dip"
            android:textSize="15dip"
            android:textColor="#D76037"
            android:focusable="false"
            android:background="@drawable/login_biankuang"
            android:text="输入用户名长度不符！"
            android:visibility="gone"
            android:id="@+id/registe_tishi1"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:paddingLeft="6dip"
                android:password="true"
                android:background="@drawable/input_blank"
                android:singleLine="true"
                android:digits="@string/limit_input"
                android:hint="请输入您的密码"
                android:textColorHint="#B0B0B0"
                android:id="@+id/registe_password1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="13dip"
                android:layout_margin="4dip"
                android:src="@drawable/xing"
                android:visibility="gone"
                android:id="@+id/regist_password_icon"/>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="25dip"
            android:hint="6-15位数字、字母"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="10dip"
            android:textSize="15dip"
            android:textColor="#D76037"
            android:focusable="false"
            android:background="@drawable/login_biankuang"
            android:text="密码长度不符！"
            android:visibility="gone"
            android:id="@+id/registe_tishi2"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:paddingLeft="6dip"
                android:background="@drawable/input_blank"
                android:singleLine="true"
                android:password="true"
                android:digits="@string/limit_input"
                android:hint="请确认您的密码"
                android:textColorHint="#B0B0B0"
                android:id="@+id/registe_password2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="13dip"
                android:layout_margin="4dip"
                android:src="@drawable/xing"
                android:visibility="gone"
                android:id="@+id/regist_password2_icon"/>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="25dip"
            android:hint="6-15位数字、字母"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="10dip"
            android:textSize="15dip"
            android:textColor="#D76037"
            android:focusable="false"
            android:background="@drawable/login_biankuang"
            android:text="密码长度不符！"
            android:visibility="gone"
            android:id="@+id/registe_tishi3"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="10dip"
            android:textSize="15dip"
            android:textColor="#D76037"
            android:focusable="false"
            android:background="@drawable/login_biankuang"
            android:text="两次输入密码不一致！"
            android:visibility="gone"
            android:id="@+id/registe_tishi4"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/consume_green_btn"
            android:text="确认注册"
            android:layout_gravity="center"
            android:textSize="20dip"
            android:textColor="#fff"
            android:layout_margin="10dip"
            android:id="@+id/registe_sure"/>

        <!-- 开放平台登陆 -->
    	<include layout="@layout/open_login"/>

</LinearLayout>