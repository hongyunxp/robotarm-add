<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:id="@+id/welcome" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/welcome">    


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="检查网络..."
        android:textColor="@color/white"
        android:textSize="20dip" />
    
    <ImageView
        android:id="@+id/dhimg"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_below="@+id/qudaopicture"
        android:layout_centerInParent="true" />

</RelativeLayout>