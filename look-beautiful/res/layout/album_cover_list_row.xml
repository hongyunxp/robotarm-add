	android:layout_weight="1.0">

	<ImageView android:id="@+id/image1" android:layout_width="@dimen/album_cover_width"
		android:layout_height="@dimen/album_cover_height" android:src="@drawable/loading_icon"
		android:layout_weight="1.0" android:scaleType="centerInside"
		android:layout_margin="@dimen/image_margin" android:onClick="clickImage" />

	<ImageView android:id="@+id/image2" android:layout_width="@dimen/album_cover_width"
		android:layout_height="@dimen/album_cover_height" android:src="@drawable/loading_icon"
		android:layout_weight="1.0" android:scaleType="centerInside"
		android:layout_margin="@dimen/image_margin" android:onClick="clickImage" />

	<ImageView android:id="@+id/image3" android:layout_width="@dimen/album_cover_width"
		android:layout_height="@dimen/album_cover_height" android:src="@drawable/loading_icon"
		android:layout_weight="1.0" android:scaleType="centerInside"
		android:layout_margin="@dimen/image_margin" android:onClick="clickImage"/>
</TableRow>