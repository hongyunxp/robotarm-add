<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e9e9e9" >

    <include
        layout="@layout/include_user_center"
        android:id="@+id/consume_top" />

    <include
        layout="@layout/consume_top_six_btn"
        android:id="@+id/consume_sixbtn" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="25dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="中国移动短信充值："
            android:textSize="20dip"
            android:textColor="#0066bb"
            android:id="@+id/sms_tv" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/consume_green2_btn"
            android:layout_marginTop="15dip"
            android:layout_below="@id/sms_tv"
            android:layout_alignLeft="@id/sms_tv"
            android:layout_centerHorizontal="true"
            android:textSize="22dip"
            android:textColor="#fff"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:id="@+id/consume_sms_10" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/consume_green2_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dip"
            android:layout_below="@id/consume_sms_10"
            android:layout_alignLeft="@id/consume_sms_10"
            android:textSize="22dip"
            android:textColor="#fff"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:id="@+id/consume_sms_20" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dip"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <!-- 客服信息 -->
            <include layout="@layout/about_me" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>