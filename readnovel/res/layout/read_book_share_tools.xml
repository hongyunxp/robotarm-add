<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:background="@drawable/read_book_share_shape"
    android:gravity="center_horizontal" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="2.5dip"
        android:text="分享"
        android:singleLine="true"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center" />
	
    <!-- 新浪分享  -->
    <LinearLayout
        android:id="@id/read_book_share_sina_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 横线分割 -->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="2.5dip"
            android:layout_marginBottom="2.5dip"
            android:src="@color/a1" />

        <!-- 新浪分享按钮 -->
        <ImageView
            android:layout_width="@dimen/read_share_tools_width"
            android:layout_height="30dip"
            android:layout_marginTop="2.5dip"
            android:layout_marginBottom="2.5dip"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="7dip"
            android:src="@drawable/sina_share_small" />
    </LinearLayout>
    
    <!-- QQ分享  -->
    <LinearLayout
        android:id="@id/read_book_share_qq_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:visibility="visible">

    <!-- 横线分割 -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="2.5dip"
        android:layout_marginBottom="2.5dip"
        android:src="@color/a1" />
    <!-- QQ分享按钮 -->
    <ImageView
        android:layout_width="@dimen/read_share_tools_width"
        android:layout_height="30dip"
        android:layout_marginTop="2.5dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:src="@drawable/qq_share_small" />
    
    </LinearLayout>

</LinearLayout>