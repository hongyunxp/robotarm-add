<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#e9e9e9">

	<include
		layout="@layout/include_user_center"
		android:id="@+id/consume_top" />

	<include 
		layout="@layout/consume_top_six_btn"
		android:id="@+id/consume_sixbtn"/>
	
	<ScrollView 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:scrollbars="none">
	<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<EditText
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:layout_marginTop="20dip"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:layout_marginBottom="8dip"
		android:paddingLeft="8dip"
		android:paddingTop="5dip"
		android:paddingBottom="5dip"
		android:maxLength="11"
		android:numeric="integer"
		android:hint="请输入您的手机号："
		android:textColorHint="#B0B0B0"
		android:phoneNumber="true"
		android:background="@drawable/phone_blank"
		android:gravity="center_vertical"
		android:id="@+id/consume_phone1_phoneNum"/>


	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:orientation="horizontal">
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:lineSpacingExtra="4dip"
			android:id="@+id/consume_tv" />
	</LinearLayout>

	<Button
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/consume_green_btn"
		android:text="下一步"
		android:textSize="20dip"
		android:textColor="#fff"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:layout_marginTop="16dip"
		android:id="@+id/consume_phone_next" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dip"
		android:layout_marginBottom="10dip"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		
		<!-- 客服信息 -->
        <include layout="@layout/about_me" />
	</LinearLayout>
	
	</LinearLayout>
	</ScrollView>
	
</LinearLayout>