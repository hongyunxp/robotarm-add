<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#e9e9e9">

	<include
		layout="@layout/include_user_center"/>

	<include layout="@layout/consume_top_six_btn"/>
	
	<ScrollView 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:scrollbars="none">
	<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:layout_marginBottom="15dip"
		android:layout_marginTop="15dip">
		
		<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="用户名："
		android:textColor="#000"
		android:id="@+id/tv1"/>
		<TextView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="成为作家"
		android:layout_toRightOf="@id/tv1"
		android:textColor="#FB8233"
		android:id="@+id/consume_username"/>
		
		<TextView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="绑定手机号："
		android:textColor="#000"
		android:layout_below="@id/tv1"
		android:id="@+id/tv2"/>
		<TextView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="13812345678"
		android:layout_toRightOf="@id/tv2"
		android:layout_below="@id/consume_username"
		android:textColor="#FB8233"
		android:id="@+id/consume_phone2_phoneNum"/>
		
		<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="我要修改"
		android:textColor="@drawable/btn_color"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@id/tv1"
		android:background="@drawable/consume_btn"
		android:id="@+id/consume_phone2_update"/>
		
	</RelativeLayout>
	
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:lineSpacingExtra="4dip"
		android:id="@+id/consume_phone2_tv1"/>
	
	<Button
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/consume_green_btn"
		android:text="点击此按钮即可发送短信申请包月"
		android:textSize="18dip"
		android:textColor="#fff"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="15dip"
		android:id="@+id/consume_phone2_sendsms" />
	
		<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:lineSpacingExtra="4dip"
		android:id="@+id/consume_phone2_tv2"/>
		<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:lineSpacingExtra="4dip"
		android:textColor="#000"
		android:text="@string/consume_phone2_tv22"/>
		
		<Button
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/consume_write_btn"
		android:text="查看包月状态"
		android:textSize="20dip"
		android:textColor="@drawable/btn_color"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:layout_marginTop="8dip"
		android:layout_marginBottom="15dip"
		android:id="@+id/consume_phone2_check" />
		
		<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/consume_phone2_tv3"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:textColor="#000"
		android:lineSpacingExtra="4dip"
		android:text="@string/consume_phone2_tv3"/>
		
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dip"
		android:layout_marginBottom="10dip"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<!-- 客服信息 -->
        <include layout="@layout/about_me" />
	</LinearLayout>
	
	</LinearLayout>
	</ScrollView>
	
</LinearLayout>